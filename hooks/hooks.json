{
  "description": "Validates markdown files after Write or Edit operations",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/validate-markdown.sh",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}
